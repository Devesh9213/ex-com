{
  "name": "employee-tracker",
  "version": "1.0.0",
  "main": "electron.js",
  "scripts": {
    "start": "concurrently -k \"npm run backend\" \"npm run frontend\" \"wait-on http://localhost:5173 && npm run electron\"",
    "backend": "node backend/server.js",
    "frontend": "cd frontend && npm run dev",
    "electron": "electron .",
    "build": "npm run rebuild-sqlite && cd frontend && npm run build",
    "dist": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win --x64 --publish never",
    "build:mac": "npm run build && electron-builder --mac --publish never",
    "rebuild-sqlite": "npm rebuild sqlite3 --runtime=electron --target=28.1.0 --disturl=https://electronjs.org/headers --abi=116",
    "postinstall": "electron-builder install-app-deps && cd frontend && npm install"
  },
  "build": {
    "appId": "com.pixsedit.employeetracker",
    "productName": "Employee Tracker",
    "copyright": "Copyright Â© 2024 PixsEdit",
    "files": [
      "electron.js",
      "package.json",
      "backend/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      },
      {
        "from": "node_modules/sqlite3/lib/binding/napi-v6-win32-x64",
        "to": "node_modules/sqlite3/lib/binding/napi-v6-win32-x64"
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "directories": {
      "output": "dist-build",
      "buildResources": "build"
    },
    "extraMetadata": {
      "description": "Employee management application",
      "author": "Your Name <your.email@example.com>"
    }
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "path": "^0.12.7",
    "sequelize": "^6.37.7",
    "sqlite3": "5.1.7"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "concurrently": "^9.1.2",
    "electron": "28.1.0",
    "electron-builder": "^24.13.3",
    "vite": "^6.2.6",
    "wait-on": "^8.0.3",
    "electron-notarize": "^1.2.3"
  }
}