{
  "name": "employee-tracker",
  "version": "1.0.0",
  "main": "electron.js",
  "scripts": {
    "start": "concurrently -k \"npm run backend\" \"npm run frontend\" \"npm run electron\"",
    "backend": "node backend/server.js",
    "frontend": "cd frontend && npm run dev",
    "electron": "electron .",
    "build": "cd frontend && npm run build",
    "dist": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win --x64 --publish=never",
    "build:mac": "npm run build && electron-builder --mac --publish=never",
    "postinstall": "cd frontend && npm install"
  },
  "build": {
    "appId": "com.pixsedit.employeetracker",
    "productName": "Employee Tracker",
    "files": [
      "electron.js",
      "package.json",
      "backend/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "generateUpdatesFilesForAllChannels": false,
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist-build",
      "buildResources": "build" 
    },
    "extraMetadata": {
      "author": "Your Name <your.email@example.com>",
      "description": "Employee Management Application"
    }
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "path": "^0.12.7",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "concurrently": "^9.1.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "vite": "^6.2.5",
    "wait-on": "^8.0.3",
    "electron-rebuild": "^3.2.9"
  }
}